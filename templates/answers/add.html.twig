{% extends 'base.html.twig' %}

{% block title %}
    {{ 'questions.answer.title' | trans({'%questionTitle%': question.title}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'questions.answer.title' | trans({'%questionTitle%': question.title}) }}</h1>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action.answer'|trans }}" class="btn btn-primary"/>
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('single_question', {slug: question.slug}) }}" class="btn btn-link">
            {{ 'action.back'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}


