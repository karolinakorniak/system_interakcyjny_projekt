{% extends 'base.html.twig' %}

{% block title %}
    {{ 'categories.delete.title' | trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'categories.delete.header' | trans({'%name%': category.name}) }}</h1>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'actions.delete'|trans }}" class="btn btn-primary"/>
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('category_index') }}" class="btn btn-link">
            {{ 'action.back'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}


