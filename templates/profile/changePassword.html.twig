{% extends 'base.html.twig' %}

{% block title %}
    {{ 'profile.changePassword.title' | trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'profile.changePassword.title' | trans }}</h1>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action.save'|trans }}" class="btn btn-primary"/>
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('profile') }}" class="btn btn-link">
            {{ 'action.back'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}


